{
  "name": "Filesystem MCP Server Evaluation",
  "description": "Comprehensive evaluation suite for the official Filesystem MCP server, demonstrating both direct and LLM host testing modes",
  "cases": [
    {
      "id": "direct-read-readme",
      "description": "Direct API call to read readme.txt",
      "mode": "direct",
      "toolName": "read_file",
      "args": {
        "path": "readme.txt"
      },
      "expectedTextContains": "Hello World"
    },
    {
      "id": "direct-read-config-json",
      "description": "Read config.json and validate structure",
      "mode": "direct",
      "toolName": "read_file",
      "args": {
        "path": "config.json"
      },
      "expectedTextContains": ["version", "1.0.0", "features"],
      "expectedSchemaName": "configFile"
    },
    {
      "id": "direct-list-docs-directory",
      "description": "List files in the docs directory",
      "mode": "direct",
      "toolName": "list_directory",
      "args": {
        "path": "docs"
      },
      "expectedTextContains": ["guide.md", "api.md"]
    },
    {
      "id": "direct-search-markdown-files",
      "description": "Get directory tree showing all markdown files",
      "mode": "direct",
      "toolName": "directory_tree",
      "args": {
        "path": "."
      },
      "expectedTextContains": [".md", "guide.md", "api.md"],
      "expectedRegex": ["guide\\.md", "api\\.md"]
    },
    {
      "id": "direct-read-nested-file",
      "description": "Read a file in a subdirectory",
      "mode": "direct",
      "toolName": "read_file",
      "args": {
        "path": "docs/guide.md"
      },
      "expectedTextContains": ["# User Guide", "guide"]
    },
    {
      "id": "direct-list-root-directory",
      "description": "List all files and directories at root",
      "mode": "direct",
      "toolName": "list_directory",
      "args": {
        "path": "."
      },
      "expectedTextContains": ["readme.txt", "config.json", "docs", "data"]
    },
    {
      "id": "llm-list-docs-openai",
      "description": "LLM (OpenAI) discovers and lists files in docs directory",
      "mode": "llm_host",
      "toolName": "placeholder",
      "args": {},
      "scenario": "What files are in the docs directory?",
      "llmHostConfig": {
        "provider": "openai",
        "model": "gpt-4",
        "temperature": 0.0,
        "maxTokens": 1000
      },
      "expectedTextContains": ["guide.md", "api.md"],
      "metadata": {
        "expectedToolCalls": [
          {
            "name": "list_directory",
            "arguments": {
              "path": "docs"
            },
            "required": true
          }
        ]
      }
    },
    {
      "id": "llm-read-config-anthropic",
      "description": "LLM (Anthropic) reads config and extracts version",
      "mode": "llm_host",
      "toolName": "placeholder",
      "args": {},
      "scenario": "Read the config.json file and tell me what version it is.",
      "llmHostConfig": {
        "provider": "anthropic",
        "model": "claude-3-5-sonnet-20241022",
        "temperature": 0.0,
        "maxTokens": 1000
      },
      "expectedTextContains": "1.0.0",
      "metadata": {
        "expectedToolCalls": [
          {
            "name": "read_file",
            "arguments": {
              "path": "config.json"
            },
            "required": true
          }
        ]
      }
    },
    {
      "id": "llm-find-markdown-files",
      "description": "LLM finds all markdown files",
      "mode": "llm_host",
      "toolName": "placeholder",
      "args": {},
      "scenario": "Find all markdown files in this project.",
      "llmHostConfig": {
        "provider": "openai",
        "model": "gpt-4",
        "temperature": 0.0
      },
      "expectedTextContains": [".md"],
      "metadata": {
        "expectedToolCalls": [
          {
            "name": "search_files",
            "arguments": {
              "pattern": "**/*.md"
            },
            "required": true
          }
        ]
      }
    },
    {
      "id": "llm-analyze-csv-data",
      "description": "LLM reads CSV and provides analysis",
      "mode": "llm_host",
      "toolName": "placeholder",
      "args": {},
      "scenario": "How many users are listed in the data/users.csv file?",
      "llmHostConfig": {
        "provider": "anthropic",
        "model": "claude-3-5-sonnet-20241022",
        "temperature": 0.0
      },
      "expectedTextContains": ["2", "Alice", "Bob"],
      "metadata": {
        "expectedToolCalls": [
          {
            "name": "read_file",
            "arguments": {
              "path": "data/users.csv"
            },
            "required": true
          }
        ]
      }
    },
    {
      "id": "llm-list-all-files",
      "description": "LLM provides complete file listing",
      "mode": "llm_host",
      "toolName": "placeholder",
      "args": {},
      "scenario": "Show me all files and directories in this project.",
      "llmHostConfig": {
        "provider": "openai",
        "model": "gpt-4",
        "temperature": 0.0
      },
      "metadata": {
        "expectedToolCalls": [
          {
            "name": "list_directory",
            "required": true
          }
        ]
      }
    }
  ],
  "metadata": {
    "author": "MCP Eval Examples",
    "version": "1.0.0",
    "notes": [
      "This dataset tests the official Filesystem MCP server from Anthropic",
      "Direct mode tests specific file operations with known paths",
      "LLM host mode tests tool discovery and natural language understanding",
      "All files are created in temporary directories using fixturify-project",
      "No API keys required for direct mode tests",
      "LLM tests require OPENAI_API_KEY or ANTHROPIC_API_KEY environment variables"
    ]
  }
}
