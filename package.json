{
  "name": "playwright-mcp-evals",
  "version": "0.1.0",
  "description": "Playwright-based eval & testing framework for MCP servers",
  "keywords": [
    "playwright",
    "mcp",
    "model-context-protocol",
    "evals",
    "testing",
    "llm"
  ],
  "license": "MIT",
  "author": "",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./fixtures/mcp": {
      "types": "./tests/fixtures/mcp.ts",
      "import": "./tests/fixtures/mcp.ts"
    },
    "./reporters/mcpEvalReporter": {
      "types": "./dist/reporters/mcpEvalReporter.d.ts",
      "import": "./dist/reporters/mcpEvalReporter.js",
      "require": "./dist/reporters/mcpEvalReporter.cjs"
    }
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "playwright-mcp-evals": "./dist/cli/index.js"
  },
  "files": [
    "dist",
    "tests/fixtures",
    "src/reporters/ui-dist"
  ],
  "scripts": {
    "build": "npm run build:ui && tsup",
    "build:ui": "tsx src/reporters/build-ui.ts",
    "dev": "tsup --watch",
    "dev:ui": "tsx src/reporters/build-ui.ts --watch",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,json,md}\"",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "prepublishOnly": "npm run build",
    "preview-reporter": "tsx scripts/preview-reporter.ts",
    "test": "vitest run",
    "test:playwright": "playwright test",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "inquirer": "^13.0.1",
    "open": "^10.1.0",
    "ora": "^9.0.0"
  },
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "@openai/agents": "^0.3.3",
    "@playwright/test": "^1.49.0",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "@vitest/ui": "^2.1.9",
    "autoprefixer": "^10.4.20",
    "esbuild": "^0.24.0",
    "eslint": "^8.57.1",
    "openai": "^4.77.3",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.15",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8",
    "zod": "^3.24.1"
  },
  "peerDependencies": {
    "@anthropic-ai/sdk": "^0.32.0",
    "@openai/agents": "^0.3.0",
    "@playwright/test": "^1.40.0",
    "openai": "^4.0.0",
    "zod": "^3.0.0"
  },
  "peerDependenciesMeta": {
    "@anthropic-ai/sdk": {
      "optional": true
    },
    "@openai/agents": {
      "optional": true
    },
    "openai": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
